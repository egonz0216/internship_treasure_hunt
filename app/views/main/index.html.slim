      td#6 onclick="treasure(6)" <span class="initial-value">?</span>
      td#7 onclick="treasure(7)" <span class="initial-value">?</span>
    tr
      td#8 onclick="treasure(8)" <span class="initial-value">?</span>
      td#9 onclick="treasure(9)" <span class="initial-value">?</span>
      td#10 onclick="treasure(10)" <span class="initial-value">?</span>
      td#11 onclick="treasure(11)" <span class="initial-value">?</span>
    tr
      td#12 onclick="treasure(12)" <span class="initial-value">?</span>
      td#13 onclick="treasure(13)" <span class="initial-value">?</span>
      td#14 onclick="treasure(14)" <span class="initial-value">?</span>
      td#15 onclick="treasure(15)" <span class="initial-value">?</span>
  br
